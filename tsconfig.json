{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@controller" : ["controller"],
      "@database/*" : ["database/*"],
      "@exceptions" : ["exceptions"],
      "@helper" : ["helper"],
      "@interfaces" : ["interfaces"],
      "@messages" : ["messages"],
      "@repo" : ["repo"],
      "@routes" : ["routes"],
      "@service" : ["service"],
      "@utils" : ["utils"],
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "./.eslintrc.js"]
}
