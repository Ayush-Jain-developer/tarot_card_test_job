{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution":"node",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "paths": {
      "@controller" : ["controller"],
      "@database/*" : ["database/*"],
      "@exceptions" : ["exceptions"],
      "@helper" : ["helper"],
      "@interfaces" : ["interfaces"],
      "@messages" : ["messages"],
      "@repo" : ["repo"],
      "@routes" : ["routes"],
      "@service" : ["service"],
      "@utils" : ["utils"],
      "@validations": ["validations"]
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
